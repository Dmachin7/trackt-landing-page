---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="group rounded-2xl border border-border-subtle bg-bg-card p-6 backdrop-blur-sm transition-all hover:border-brand-primary/30 hover:shadow-[0_0_30px_var(--color-brand-glow)] md:p-8">
  <button class="feature-card-toggle w-full text-left md:pointer-events-none md:cursor-default">
    <div class="flex items-center justify-between gap-3 md:block">
      <div class="mb-0 flex h-12 w-12 shrink-0 items-center justify-center rounded-xl bg-brand-primary/10 text-brand-accent md:mb-4">
        <Fragment set:html={icon} />
      </div>
      <h3 class="flex-1 text-lg font-semibold text-text-primary md:mb-2 md:flex-none md:text-xl">{title}</h3>
      <svg class="chevron h-5 w-5 shrink-0 text-text-secondary/50 transition-transform duration-300 md:hidden" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m6 9 6 6 6-6"/></svg>
    </div>
  </button>
  <div class="accordion-body max-h-0 overflow-hidden transition-[max-height] duration-300 ease-out md:max-h-none">
    <p class="mt-3 text-sm leading-relaxed text-text-secondary md:mt-0 md:text-base">{description}</p>
  </div>
</div>
