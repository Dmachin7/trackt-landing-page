---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Trackt | Inventory Tracking & Sales Analytics for Small Business",
  description = "Track every unit, know every trend. Trackt gives small businesses real-time inventory tracking and sales analytics.",
} = Astro.props;

const url = "https://trackt.tech";

import "@fontsource/inter/400.css";
import "@fontsource/inter/600.css";
import "@fontsource/inter/700.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={url} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Trackt" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="theme-color" content="#0a0a0f" />

    <style is:global>
      @import "../styles/global.css";
    </style>
  </head>
  <body class="min-h-screen overflow-x-hidden">
    <slot />
  </body>
</html>
