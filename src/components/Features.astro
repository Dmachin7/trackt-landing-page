---
import FeatureCard from "./FeatureCard.astro";

const features = [
  {
    title: "Inventory Tracking",
    description: "Monitor stock levels across all your products in real time. Always know what you have and what's moving.",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z"/><path d="m3.3 7 8.7 5 8.7-5"/><path d="M12 22V12"/></svg>',
  },
  {
    title: "Sales Analytics",
    description: "Visualize your sales trends with clean, actionable dashboards. Spot your best sellers and slow movers instantly.",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="20" x2="18" y2="10"/><line x1="12" y1="20" x2="12" y2="4"/><line x1="6" y1="20" x2="6" y2="14"/></svg>',
  },
  {
    title: "Low Stock Alerts",
    description: "Get automatic email notifications when inventory drops below your threshold. Never run out of your top products.",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 8a6 6 0 0 1 12 0c0 7 3 9 3 9H3s3-2 3-9"/><path d="M10.3 21a1.94 1.94 0 0 0 3.4 0"/></svg>',
  },
  {
    title: "Weekly Recaps",
    description: "Receive a weekly email summary of your sales performance, inventory changes, and key metrics.",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>',
  },
];
---

<section class="relative px-5 py-20 md:py-32" id="features">
  <div class="mx-auto max-w-6xl">
    <div class="mb-12 text-center md:mb-16">
      <div class="mb-5 inline-flex items-center gap-1.5 rounded-full border border-brand-primary/30 bg-brand-primary/10 px-3.5 py-1.5 text-sm font-medium text-brand-primary">
        <span class="h-1.5 w-1.5 animate-pulse rounded-full bg-brand-primary"></span>
        In Development
      </div>
      <h2 class="text-3xl font-bold md:text-4xl">
        Meet Trackt â€” Built for Small Business Owners
      </h2>
      <p class="mx-auto mt-4 max-w-2xl text-text-secondary md:text-lg">
        We're building Trackt to solve the exact inventory and sales problems we've seen
        small businesses struggle with for years. Here's what it'll do.
      </p>
    </div>

    <div class="grid grid-cols-1 gap-5 md:grid-cols-2 md:gap-6">
      {features.map((feature, index) => (
        <div
          class="scroll-reveal opacity-0 translate-y-8 transition-all duration-700 ease-out"
          style={`transition-delay: ${index * 100}ms`}
        >
          <FeatureCard {...feature} />
        </div>
      ))}
    </div>
  </div>
</section>
