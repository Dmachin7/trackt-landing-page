---
interface Props {
  title?: string;
  description?: string;
  jsonLd?: string; // JSON-LD structured data as a serialized string
  noIndex?: boolean;
}

const {
  title = "Web Design & Tech Consulting in Tampa, FL | Trackt",
  description = "Tampa web designer and tech consultant for small businesses. Custom websites from $300, Google Sheets systems, inventory tracking, and custom software. Also building Trackt — inventory & sales analytics for small businesses.",
  jsonLd,
  noIndex = false,
} = Astro.props;

const siteUrl = "https://trackt.tech";
const canonicalUrl = `${siteUrl}${Astro.url.pathname}`;

import "@fontsource/inter/400.css";
import "@fontsource/inter/600.css";
import "@fontsource/inter/700.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content={noIndex ? "noindex, follow" : "index, follow"} />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Trackt" />
    <!-- TODO: add og:image once a social preview image is created (1200×630px recommended) -->

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" sizes="32x32" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#16b4d2" />

    <!-- JSON-LD Structured Data (injected per-page) -->
    {jsonLd && <script is:inline type="application/ld+json" set:html={jsonLd} />}

    <style is:global>
      @import "../styles/global.css";
    </style>
  </head>
  <body class="min-h-screen overflow-x-hidden">
    <slot />
  </body>
</html>
